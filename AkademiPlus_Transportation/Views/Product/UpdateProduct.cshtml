@model AkademiPlus_Transportation.Models.TblProduct
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Güncelleme Sayfası</h2>
<form method="post">
    <label>Ürün ID</label>
    @Html.TextBoxFor(x => x.ProductID, new { @class = "form-control" })
    <br />
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Ürün Ölçü Türü</label>
    @Html.TextBoxFor(x => x.ProductSizeType, new { @class = "form-control" })
    <br />
    <label>Ürün Ölçüsü</label>
    @Html.TextBoxFor(x => x.ProductSize, new { @class = "form-control" })
    <br />
    <label>Ürün Açıklaması</label>
    @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Ürünü Güncelle</button>
</form>

